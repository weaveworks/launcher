apiVersion: v1
kind: Service
metadata:
  name: service
spec:
  type: NodePort
  ports:
    - port: 80
      nodePort: 30080
  selector:
    name: service
---
apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: service
spec:
  replicas: 1
  revisionHistoryLimit: 2
  template:
    metadata:
      labels:
        name: service
    spec:
      containers:
      - name: service
        image: {{.Service.Image}}
        args:
        - -scheme={{.Service.Scheme}}
        - -hostname={{.Service.Hostname}}
        - -bootstrap.base-url={{.Bootstrap.BaseURL}}
        - -agent-manifest=/agent-k8s/agent.updated.yaml
        ports:
        - containerPort: 80
        volumeMounts:
        - name: agent-k8s
          mountPath: /agent-k8s
      volumes:
      - name: agent-k8s
        configMap:
          name: agent-k8s
